<section class="admin-categories-index">

  <header class="page-header">
    <h1>
     All Categories
    </h1>
  </header>

  <div class="panel panel-default categories">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Category</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td>
              <%= link_to [:admin, category] do %>
                <%= category.name %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
   <div class="well">
    <%= link_to 'New Category', [:new, :admin, :category], class: 'btn btn-info'  %>
  </div>

</section>